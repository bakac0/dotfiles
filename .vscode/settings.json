{
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.fontSize": 20,
  "editor.formatOnSave": true,
  "editor.smoothScrolling": true,
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.invisibleCharacters": false,
  "editor.quickSuggestions": {
    "other": "on",
    "comments": "off",
    "strings": true
  },
  "explorer.compactFolders": false,
  "git.autofetch": true,
  "go.addTags": {
    "transform": "camelcase"
  },
  "go.formatTool": "goimports",
  "go.inlayHints.assignVariableTypes": false,
  "go.inlayHints.compositeLiteralFields": true,
  "go.inlayHints.compositeLiteralTypes": true,
  "go.inlayHints.constantValues": true,
  "go.inlayHints.parameterNames": true,
  "go.inlayHints.rangeVariableTypes": true,
  "go.lintTool": "golangci-lint",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true,
    "ui.semanticTokens": true
  },
  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.smoothScrolling": true,
  "vim.easymotion": true,
  "vim.useSystemClipboard": true,
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-mac": "/Users/d.o.tkachuk/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.kubectl-path-mac": "/Users/d.o.tkachuk/.vs-kubernetes/tools/kubectl/kubectl",
    "vs-kubernetes.minikube-show-information-expiration": "2024-05-09T19:50:37.092Z"
  },
  "workbench.colorTheme": "Atom One Dark",
  "workbench.iconTheme": "material-icon-theme",
  "window.zoomLevel": 1,
  "workbench.list.smoothScrolling": true,
  "workbench.startupEditor": "none",
  "go-struct-tag.cases": ["camel", "snake"],
  "git.ignoreRebaseWarning": true,
  "editor.fontFamily": "'Fira Code', monospace",
  "editor.fontLigatures": true,
  "editor.stickyScroll.maxLineCount": 1,
  "editor.stickyScroll.scrollWithEditor": false,
  "git.replaceTagsWhenPull": true,
  // "emeraldwalk.runonsave": {
  //   "commands": [
  //     {
  //       "match": "\\.go$",
  //       "cmd": "golines ${file} -w -m 120"
  //     }
  //   ]
  // },
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "remote.autoForwardPortsSource": "hybrid",
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[helm]": {
    "editor.formatOnSave": false
  },
  "update.showReleaseNotes": false,
  "editor.semanticHighlighting.enabled": true,
  "editor.semanticTokenColorCustomizations": {
    "[Atom One Dark]": {
      "enabled": true,
      "rules": {
        "type": {
          "fontStyle": "bold"
        },
        "parameter": {
          "fontStyle": "italic",
          "foreground": "#98C379"
        },
        "type.defaultLibrary": {
          "foreground": "#E5C07B"
        },
        "namespace": "#E5C07B"
      }
    }
  },
  "editor.minimap.enabled": false,
  "github.copilot.advanced": {
    "authProvider": "github"
  },
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools"
  },
  "sqltools.format": {
    "reservedWordCase": "upper",
    "linesBetweenQueries": 1
  },
  "gitlens.views.scm.grouped.views": {
    "commits": true,
    "branches": true,
    "remotes": true,
    "stashes": true,
    "tags": true,
    "worktrees": true,
    "contributors": true,
    "repositories": false,
    "searchAndCompare": false,
    "launchpad": true
  },
  "gitlens.views.commitDetails.files.layout": "tree",
  "vim.leader": "<space>",
  "vim.camelCaseMotion.enable": true,
"vim.visualModeKeyBindings": [
    {
      "before": ["J"],
      "commands": [
        {
          "command": "editor.action.moveLinesDownAction",
          "args": 1
        },
      ]
    },
    {
      "before": ["K"],
      "commands": [
        {
          "command": "editor.action.moveLinesUpAction",
          "args": 1
        },
      ]
    }
  ]
}
